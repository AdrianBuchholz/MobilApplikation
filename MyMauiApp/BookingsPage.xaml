<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.BookingsPage"
             x:Name="ThisPage"
             Title="My Bookings">

    <StackLayout Padding="10">
        <Label Text="Bookings" FontSize="24" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Bookings}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="4" Padding="8" BorderColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Email}" FontSize="12" />
                            <Label Text="{Binding PerformanceId, StringFormat='Performance: {0}'}" FontSize="12" />
                            <Button Text="Delete" Command="{Binding BindingContext.DeleteCommand, Source={x:Reference ThisPage}}" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Reload" Command="{Binding LoadCommand}" Margin="0,8,0,0" />
    </StackLayout>
</ContentPage>