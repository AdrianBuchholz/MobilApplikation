<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MobileClient.ViewModels"
             x:Class="MobileClient.ConcertPage"
             x:Name="Page">
    <!-- BindingContext is provided by DI when navigating -->
    <StackLayout Padding="10">
        <Label Text="Performances" FontSize="24" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Performances}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding DateTime}" />
                        <Label Text="{Binding Location}" />
                        <Label Text="{Binding BookingCount, StringFormat='Bookings: {0}'}" />
                        <Button Text="Book" Command="{Binding Source={x:Reference Page}, Path=BindingContext.BookCommand}" CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>